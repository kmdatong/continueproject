@using WebApplication3.Models
@model AccountModel
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success" style="margin:20px 0px 0 100px;" href="@Url.Action("list")">用户列表</a>
<form role="form" style="margin-top:30px;" method="post" class="form-horizontal">
    @Html.ValidationSummary()
    @Html.HiddenFor(s=>s.Id)
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">名称</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.Name,new {@class="form-control" })
        </div>
        <div class="col-sm-3">
            @Html.ValidationMessageFor(s=>s.Name)
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">登录名</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.LoginName, new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
            @Html.ValidationMessageFor(s => s.LoginName)
        </div>
    </div>
    @if (Model.Id == 0)
    { 
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.Password, new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
            @Html.ValidationMessageFor(s => s.Password)
        </div>
    </div>

    }
    
    <div class="form-group">
        <label for="age" class="col-sm-2 control-label">年龄</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.Age, new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
            @Html.ValidationMessageFor(s => s.Age)
        </div>
    </div>
    <div class="form-group">
        <label for="remark" class="col-sm-2 control-label">备注</label>
        <div class="col-sm-6">
            @Html.TextAreaFor(s=>s.Remark, new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
            @Html.ValidationMessageFor(s => s.Remark)
        </div>
    </div>
    <div class="form-group">
        <label for="remark" class="col-sm-2 control-label"></label>
        <div class="col-sm-6">
            <button type="submit" class="btn btn-default">提交</button>

        </div>
    </div>

</form>