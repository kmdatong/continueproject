@using WebApplication3.Models
@model LoginModel
@{
    ViewData["Title"] = "Index";
}

<h2 style="display:inline-block;text-align:center;padding-left:160px;">用户登录</h2>
<form role="form" style="margin-top:30px;" method="post" class="form-horizontal">
    @Html.ValidationSummary()
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">用户名</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.LoginName, new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
          
        </div>
    </div>
    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">密码</label>
        <div class="col-sm-3">
            @Html.TextBoxFor(s => s.Password, new { @class = "form-control", @type = "password" })
        </div>
        <div class="col-sm-3">
         
        </div>
    </div>

    <div class="form-group">
        <label for="remark" class="col-sm-2 control-label"></label>
        <div class="col-sm-6">
            <button type="submit" class="btn btn-default">提交</button>

        </div>
    </div>

</form>